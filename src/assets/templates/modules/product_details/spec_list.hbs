{{#each categories}}
        <li class="list-group-item">
            <div class="spec-table-cont">
                <table class="table">
                    <thead>
                        <tr tabindex="0" aria-label="{{spec_type}} category">
                            <th>{{spec_type}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each spec_type_details}}
                        <tr tabindex="0" aria-label="{{feature_name}} is {{feature_value}}">
                            <td >{{feature_name}}</td>
                            <td>{{feature_value}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </li>
        {{/each}}